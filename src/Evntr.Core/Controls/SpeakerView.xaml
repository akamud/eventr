<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Evntr.Core.Controls.SpeakerView"
             x:Name="speaker">
    <StackLayout Orientation="Horizontal"
                 BindingContext="{x:Reference speaker}"
                 Padding="10">
        <Image HeightRequest="100"
               Source="{Binding AvatarUrl}"
               Aspect="AspectFit"/>
        <StackLayout VerticalOptions="EndAndExpand">
            <Label FontAttributes="Bold"
                   Text="{Binding Name}"
                   TextColor="{Binding TextColor}"/>
            <Label FontSize="14"
                   Text="{Binding MiniBio}"
                   TextColor="{Binding TextColor}"/>    
        </StackLayout>
    </StackLayout>
</ContentView>
